
<?xml version="1.0" encoding="utf-8"?>
<Component xmlns="http://www.red5studios.com/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.red5studios.com/ ../../../schemas/component.xsd">
	<Info
		title="IRC"
		author="ArkyChan"
		description="A in game IRC based chat :D"
		url="www.arkage.co.cc"
		uiVersion="1001"
	/>

	<Events>
		<Event name="ON_COMPONENT_LOAD"			bind="OnComponentLoad"/>
	</Events>
	
	<Styles>
		<StyleSheet name="IRCChat" parent="Untinted">
			font:UbuntuMedium_10;
			valign:top;
			halign:left;
			color:#FFFFFF;
			bgcolor:#000000;
			clip:true;
			wrap:true;
			leading-mult:1.6;
			alpha:1.0;
			shadow:0;
		</StyleSheet>
	</Styles>
	
	<BluePrints>
		<BluePrint name="IRCline" instantiable="true">
			<StillArt name="plate" dimensions="left:0; right:100%; center-y:50%; height:100%" style="texture:colors; region:white; tint:#000000; alpha:0.5"/>
			<Text name="text" dimensions="left:0; right:100%; center-y:50%; height:100%" class="IRCChat" style="halign:left; valign:bottom;"/>
		</BluePrint>
	</BluePrints>
	
	<Frames>
		<WebFrame name="Web" dimensions="center-x:50%; center-y:50%; width:100%; height:100%;" type-target="false" showloading="true">
			<Children>
				<Self style="shadow:0"/>
			</Children>
			<OnNavigationFinished bind="WebUI_OnNavigationFinished"/>
		</WebFrame>
		
		<PanelFrame name="Main" dimensions="right:100%; width:390; height:244; bottom:66%;" permanent="true" noclick="true" style="texture:colors; region:black; alpha:0.5">
			<Children>
				<!-- <StillArt id="BackPlate" dimensions="dock:fill" style="texture:colors; region:white; tint:#000000; alpha:0.25;"/> -->
			</Children>
			<OnMessage bind="OnMessage"/>
		</PanelFrame>
	</Frames>

</Component>
